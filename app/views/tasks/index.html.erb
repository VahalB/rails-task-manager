<h1> MY TASKS </h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed? %>
        <li>
          [x] <%= link_to task.title, task %>
          <%= link_to "Delete #{task.title}", task_path(task), data: { turbo_method: :delete}%>
        </li>
    <% else %>
        <li>
          [ ] <%= link_to task.title, task %>
          <%= link_to "Delete #{task.title}", task_path(task), data: { turbo_method: :delete}%>
        </li>
    <% end %>
 <% end %>
</ul>

